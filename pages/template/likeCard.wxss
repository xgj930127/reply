.card-container {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.card-userInfo {
  display: flex;
}

.card-v {
  width: 38rpx;
  height: 38rpx;
  border-radius: 38rpx;
  border-color: white;
  border-width: 5rpx;
  position: absolute;
  right: -10rpx;
  bottom: 10rpx;
}

.card-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 88rpx;
}

.card-userInfo_info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
}

.card-nikeName {
  font-size: 34rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}

.card-tag {
  font-size: 26rpx;
  color: #999;
  margin-right: 20rpx;
}

.card-location {
  margin-right: 20rpx;
  width: 13rpx;
  height: 15rpx;
}

.card-content_Img {
  display: flex;
  margin-top: 28rpx;
}

.card-content {
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
}

.card-content_left {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 160rpx;
  position: relative;
}

.card-title_one {
  color: #333;
  font-size: 36rpx;
  font-weight: 900;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  -webkit-text-overflow: ellipsis;
  -moz-text-overflow: ellipsis;
  white-space: nowrap;
}

.card-title_two {
  color: #333;
  font-size: 36rpx;
  font-weight: 900;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-other {
  font-size: 24rpx;
  size: #AAAAAA;
  margin-left: 24rpx;
}

.card-other:first-child {
  margin-left: 0rpx;
}

.card-other:last-child {
  position: absolute;
  right: 0;
}

.card-content {
  font-size: 34rpx;
  color: #333;
  line-height: 1.2em;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.divider {
  height: 20rpx;
  width: 100%;
  color: #EFEFF4;
  background-color: #EFEFF4;
}
