.attentionState, .cancelAttentionState {
  position: absolute;
  width: 160rpx;
  height: 52rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #ccc;
  background-color: white;
  right: 15rpx;
  top: 58rpx;
  border-radius: 26rpx;
  border: 2rpx solid #e6e6e6;
  line-height: 50rpx;
}

.attentionState {
  background-color: #3380f7;
  border: none;
